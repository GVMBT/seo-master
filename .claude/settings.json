{
  "model": "claude-opus-4-6",
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Bash(*)",
      "mcp__supabase__*",
      "mcp__upstash__*",
      "mcp__context7__*",
      "mcp__Railway__*",
      "mcp__acp__*"
    ],
    "deny": ["Bash(rm -rf /*)", "Bash(git push --force*)"]
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "0",
    "UV_PYTHON": "3.14"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "C:\\Users\\GVMBT\\.local\\bin\\uv.exe run --project \"%CLAUDE_PROJECT_DIR%\" pytest tests/ -x -q --timeout=60 --ignore=tests/e2e",
            "timeout": 120
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "C:\\Users\\GVMBT\\.local\\bin\\uv.exe run --project \"%CLAUDE_PROJECT_DIR%\" ruff check . --select=E,F,I,S,C901,B,UP,SIM,RUF --quiet",
            "timeout": 60
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "C:\\Users\\GVMBT\\.local\\bin\\uv.exe run --project \"%CLAUDE_PROJECT_DIR%\" mypy bot/ services/ db/ api/ cache/ --check-untyped-defs --no-error-summary",
            "timeout": 60
          }
        ]
      }
    ],
    "PreToolUse": []
  },
  "mcpServers": {}
}

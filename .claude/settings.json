{
  "model": "claude-opus-4-6",
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Bash(uv run *)",
      "Bash(cd *)",
      "Bash(ls *)",
      "Bash(find *)",
      "Bash(git *)",
      "mcp__supabase__*",
      "mcp__upstash__*",
      "mcp__context7__*"
    ],
    "deny": ["Bash(rm -rf *)", "Bash(git push --force*)", "Bash(curl * | bash)"]
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "0",
    "UV_PYTHON": "3.14"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "C:\\Users\\GVMBT\\.local\\bin\\uv.exe run --project \"%CLAUDE_PROJECT_DIR%\" pytest tests/ -x -q --timeout=60",
            "timeout": 120
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "C:\\Users\\GVMBT\\.local\\bin\\uv.exe run --project \"%CLAUDE_PROJECT_DIR%\" ruff check . --select=E,F,I,S,C901,B,UP,SIM,RUF --quiet",
            "timeout": 60
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "C:\\Users\\GVMBT\\.local\\bin\\uv.exe run --project \"%CLAUDE_PROJECT_DIR%\" mypy bot/ routers/ services/ db/ api/ cache/ --check-untyped-defs --no-error-summary",
            "timeout": 60
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Before writing to routers/ â€” verify the file does NOT contain business logic (SQL queries, token calculations, external API calls). Business logic must be in services/."
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "supabase": {
      "command": "npx",
      "args": ["-y", "@supabase/mcp-server-supabase"],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "${SUPABASE_ACCESS_TOKEN}",
        "SUPABASE_PROJECT_ID": "${SUPABASE_PROJECT_ID}"
      }
    },
    "upstash": {
      "command": "npx",
      "args": ["-y", "@upstash/mcp-server"],
      "env": {
        "UPSTASH_EMAIL": "${UPSTASH_EMAIL}",
        "UPSTASH_API_KEY": "${UPSTASH_API_KEY}"
      }
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    }
  }
}

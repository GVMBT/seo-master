{
  "model": "claude-opus-4-6",
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Bash(*)",
      "mcp__supabase__*",
      "mcp__upstash__*",
      "mcp__context7__*",
      "mcp__Railway__*",
      "mcp__acp__*"
    ],
    "deny": ["Bash(rm -rf /*)", "Bash(git push --force*)"]
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "0",
    "UV_PYTHON": "3.14"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/c/Users/GVMBT/.local/bin/uv.exe run --project \"$CLAUDE_PROJECT_DIR\" pytest tests/ -x -q --timeout=60 --ignore=tests/e2e",
            "timeout": 120
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "/c/Users/GVMBT/.local/bin/uv.exe run --project \"$CLAUDE_PROJECT_DIR\" ruff check . --select=E,F,I,S,C901,B,UP,SIM,RUF --ignore=RUF001,RUF002,RUF003 --quiet",
            "timeout": 60
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "/c/Users/GVMBT/.local/bin/uv.exe run --project \"$CLAUDE_PROJECT_DIR\" ruff format --check .",
            "timeout": 30
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "/c/Users/GVMBT/.local/bin/uv.exe run --project \"$CLAUDE_PROJECT_DIR\" mypy bot/ services/ db/ api/ cache/ --check-untyped-defs --no-error-summary",
            "timeout": 60
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "/c/Users/GVMBT/.local/bin/uv.exe run --project \"$CLAUDE_PROJECT_DIR\" bandit -r bot/ services/ db/ api/ cache/ platform_rules/ -ll --quiet",
            "timeout": 60
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "/c/Users/GVMBT/.local/bin/uv.exe run --project \"$CLAUDE_PROJECT_DIR\" vulture bot/ services/ db/ api/ cache/ platform_rules/ --min-confidence 80",
            "timeout": 60
          }
        ]
      }
    ],
    "PreToolUse": [],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "/c/Users/GVMBT/.local/bin/uv.exe run --project \"$CLAUDE_PROJECT_DIR\" ruff check . --select=E,F,I,S,C901,B,UP,SIM,RUF --ignore=RUF001,RUF002,RUF003 --quiet",
            "timeout": 15
          }
        ]
      }
    ]
  },
  "mcpServers": {}
}
